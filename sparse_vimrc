" sparse vimrc version
" ------------------

syntax enable
set background=light
set cursorline
set number
set expandtab
set shiftwidth=4
set autoindent
set showmatch
set incsearch
set hlsearch
colorscheme slate

set termguicolors
let g:vimtex_quickfix_mode = 0
autocmd BufNewFile,BufRead *.tex set filetype=tex

